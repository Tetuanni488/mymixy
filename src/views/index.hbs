{{!-- Recent Posts --}}

<div class="flex-1 homesite-content-wrapper content-flex flex-dir-col gap-20">
    <h2 class="tl-1">Create new post</h2>
    <div class="post-form content-flex flex-dir-col w-100 br-10 bg2-color">
        <form class="content-flex flex-dir-col" action="/images" method="POST" enctype="multipart/form-data">
            <div class="content-flex flex-dir-col input-group">
                <input class="input-1 bg-trans" name="author" class="form-control" autocapitalize="off" autocorrect="off" placeholder="Author" required>
                <input class="input-1 bg-trans" name="title" class="form-control" autocapitalize="off" autocorrect="off" placeholder="Title here" required>
                <textarea class="tarea-1 bg-trans" name="description" class="form-control" placeholder="Description here" onkeypress="autoGrow(this)" rows="2"></textarea>
            </div>
            <div class="form-group-bttns content-flex justify-con-sBetween gap-10">
                <div class="input-group bttn text-center"> 
                    <input class="hidden" id="postImg" type="file" name="image" class="form-control" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                    <label for="postImg">Select max 4 images</label>
                </div>
                <button class="bttn">
                    new post
                </button>
            </div>
        </form>
    </div>

    <h2 class="tl-1">Recent posts</h2>
    <div class="content-flex flex-dir-col">
        {{#each images}}
            <a href="/images/{{uniqueId}}" class="content-flex post-content-wrapper postsite-content-wrapper w-100">
                <div class="post-profile content-flex flex-dir-row justify-con-start gap-10">
                    <img class="profile-img-50" src="https://2wcvjr2o0jc97l6eq1lut4y1-wpengine.netdna-ssl.com/wp-content/uploads/2016/09/no-profile-img.jpg" alt="">
                    <div class="post-details">
                        <div class="post-profile-alias">
                            <span class="text-rossa font-w700">Author: </span>{{author}}
                        </div>
                        <span>{{timestamp}}</span>
                    </div>
                </div>
                <div class="br-10 mt-10 p-15 content-flex flex-dir-col gap-10 justify-con-center">
                    <div class="post-content font-w500">
                        <p>{{title}}</p>
                        <p>{{description}}</p> 
                    </div>       
                </div>
                <img src="/public/upload/{{filename}}" alt="" style="width: 100%;" class="br-10 w-100">
            </a>
        {{/each}}
    </div>
</div>

