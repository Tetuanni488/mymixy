{{!-- Recent Posts // New people --}}
<div id="common-container" class="mrl-50 mt-20">
    <div class="post-form bg2-color">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group"> 
                    <input name="author" class="form-control"  placeholder="Author" required>
                </div>
                <div class="input-group"> 
                    <input name="title" class="form-control" placeholder="Title here" required>
                </div>
                <div class="input-group"> 
                    <textarea name="description" class="form-control" placeholder="Description here" onkeypress="auto_grow(this)" rows="2"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group"> 
                    <input type="file" name="image" class="form-control" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                </div>
                <button>
                    new post
                </button>
            </div>
        </form>
    </div>
    <div id="recent-people-list" class="bg2-color">
        <header>
            <h3>Meet new people!</h3>
        </header>
    </div>
</div>

{{!-- Recent Posts --}}


<div class="m-50 mt-20">
    <h2 class="tl-1">Recent posts</h2>
    <div class="mt-20 row-list">
        {{#each images}}
            <div class="bg2-color br-10 p-25 mt-20">
                <header>
                    <h3 class="m-20">{{title}} by {{author}}</h2>
                </header>
                <a href="">
                    <img src="/public/upload/{{filename}}" alt="" style="width: 100%;" class="br-10">
                </a>
                <div class="mt-20 p-15 br-10 bg3-color">
                    {{description}}
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script>
    function auto_grow(element){
        element.style.height = "50px"
        element.style.height = `${element.scrollHeight}px`
    }
</script>

